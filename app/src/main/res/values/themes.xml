<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SheerAssessment" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SheerToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="navigationIcon">@drawable/ic_back_arrow</item>
    </style>

    <style name="SheerButton">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>
</resources>