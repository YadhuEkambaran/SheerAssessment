<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/_16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_user_avatar_shimmer"
        android:layout_width="@dimen/user_avatar_size_small"
        android:layout_height="@dimen/user_avatar_size_small"
        android:background="@color/shimmerColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_user_name_shimmer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_20sp"
        android:background="@color/shimmerColor"
        android:fontFamily="sans-serif-medium"
        android:paddingHorizontal="@dimen/_16dp"
        android:layout_marginStart="@dimen/_8dp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@id/iv_user_avatar_shimmer"
        app:layout_constraintTop_toTopOf="@id/iv_user_avatar_shimmer"
        app:layout_constraintEnd_toStartOf="@id/iv_right_arrow_shimmer"
        app:layout_constraintBottom_toBottomOf="@id/iv_user_avatar_shimmer"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_right_arrow_shimmer"
        android:layout_width="@dimen/arrow_size"
        android:layout_height="@dimen/arrow_size"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_right_arrow"
        app:layout_constraintTop_toTopOf="@id/iv_user_avatar_shimmer"
        app:layout_constraintBottom_toBottomOf="@id/iv_user_avatar_shimmer"/>
</androidx.constraintlayout.widget.ConstraintLayout>