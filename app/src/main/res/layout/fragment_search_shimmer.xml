<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_search_avatar_shimmer"
        android:layout_width="@dimen/user_avatar_size"
        android:layout_height="@dimen/user_avatar_size"
        android:background="@color/shimmerColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_32dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_search_name_shimmer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_24sp"
        android:textStyle="bold"
        android:paddingTop="@dimen/_8dp"
        android:layout_marginTop="@dimen/_8dp"
        android:background="@color/shimmerColor"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_search_avatar_shimmer"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_search_username_shimmer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_20sp"
        android:layout_marginTop="@dimen/_8dp"
        android:background="@color/shimmerColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_search_name_shimmer"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_search_description_shimmer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_24sp"
        android:paddingTop="@dimen/_8dp"
        android:maxLines="4"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/_8dp"
        android:background="@color/shimmerColor"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_search_username_shimmer"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_search_follower_count_shimmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/shimmerColor"
        android:paddingHorizontal="@dimen/_24dp"
        android:layout_marginTop="@dimen/_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_search_following_count_shimmer"
        app:layout_constraintTop_toBottomOf="@id/tv_search_description_shimmer"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_search_following_count_shimmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/shimmerColor"
        android:paddingHorizontal="@dimen/_24dp"
        app:layout_constraintStart_toEndOf="@id/btn_search_follower_count_shimmer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_search_follower_count_shimmer"/>


</androidx.constraintlayout.widget.ConstraintLayout>